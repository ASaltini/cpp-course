\mode<presentation>

% Requirement
\RequirePackage{tikz}

% Settings
\useinnertheme{Owlie}
\useoutertheme{Owlie}
\usecolortheme{Owlie}
\usefonttheme{professionalfonts}

\setbeamertemplate{navigation symbols}{}
\setbeamertemplate{itemize items}[triangle]
\setbeamertemplate{blocks}[rounded][shadow=false]

\setbeamercolor*{item}{fg = palette primary.fg}

\setbeamercolor*{title}{fg = palette primary.fg, bg = palette primary.bg}
\setbeamercolor*{author}{fg = palette primary.fg}
\setbeamercolor*{date}{fg = palette primary.bg}
\setbeamercolor*{institute}{fg = palette primary.fg}

\setbeamercolor*{frametitle}{fg = palette primary.fg}
\setbeamercolor*{framesubtitle}{fg = palette primary.fg}

\mode<all>